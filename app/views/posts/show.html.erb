<h2><%= @post.title %>:</h2>

<div class="row">
  <div class="col-md-8 col-offset-2 post-wrapper">
    <%= @post.body %>  
  </div>
  <br>
    <%= link_to "author profile", user_path(@post.user), class: 'btn btn-default' %>
    
  <div id="comments">
    <h2><%= @post.comments.count %>Comments</h2>
    <%= render @post.comments %>

    <h3>Add a comment:</h3>
    <% if logged_in %>
      <%= render"comments/comment_form" %>
    <% else %>
      Please Log in to comment    
    <% end %>
    
  </div>


</div>
