<div>
  <p><%= image_tag comment.user.image %>
    <strong><%= comment.user.name %></strong><i>... <%= time_ago_in_words(comment.created_at) %> ago</i>
  </p>
  <P><%= comment.body %></P>

  <% if comment.user == current_user %>
  
    <%= link_to 'delete', post_comment_path(post_id: @post.uuid, id: comment.uuid), method: :delete, data: {confirm:"Are you sure you want to delete?"} %>

  <% end%>
  <br><hr><br> 
</div>